<h1>Mes tâches</h1>

<ul class="list-group list-group-flush">
<% @tasks.each do |task| %>
  <li class="list-group-item list-group-item-action"><%= link_to "#{task.title}", task_path(task.id) %> - <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></li>
<% end %>
</ul>

<p><%= link_to "Ajouter une nouvelle tâche", new_task_path, class: 'btn btn-primary mt-3' %></p>
